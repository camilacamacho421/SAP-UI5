<mvc:View controllerName="sap.ui.demo.walkthrough.controller.App" 
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">
    <Shell> <!--Hace que todo lo de adentro quede como en un contenedor. Pone bordes a los costados de la pÃ¡gina-->
        <App class="myAppDemoWT">
            <pages>
                <Page title="{i18n>homePageTitle}">
                    <content>
                        <Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
                            <content>
                                <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="myCustomButton"/>
                                <Input value="{/recipient/name}" description="Hola {/recipient/name}" valueLiveUpdate="true" width="60%"/>
                                <FormattedText htmlText="Hola {/recipient/name}" class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
